<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#68a03d">


    <TextView
        android:id="@+id/Estado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ventiladores_en_buen_estado"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginBottom="30dp" />


    <ImageView
        android:id="@+id/tick"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/imagen2"
        android:layout_marginBottom="30dp"/>


    <TextView
        android:id="@+id/Mensaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/los_ventiladores_est_n_funcionando_sobre_el_60_de_su_capacidad_est_n_en_buen_funcionamiento"
        android:textColor="#000000"
        android:textSize="23sp"
        android:textStyle="bold"
        android:layout_marginHorizontal="20dp"
        android:gravity="center"/>

</LinearLayout>
