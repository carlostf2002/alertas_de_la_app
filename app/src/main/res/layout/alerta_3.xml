<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#853635">


    <TextView
        android:id="@+id/Alerta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/alert_a"
        android:textColor="#000000"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_marginBottom="30dp" />


    <ImageView
        android:id="@+id/IconoAlerta"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/imagen3"
        android:layout_marginBottom="30dp"/>


    <TextView
        android:id="@+id/Mensaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/se_detect_una_temperatura_mayor_a_90_se_recomienda_apagar_el_pc_o_revisarlo"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginHorizontal="20dp"
        android:gravity="center"/>

</LinearLayout>
